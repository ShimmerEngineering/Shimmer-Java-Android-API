<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
<item android:state_enabled="false" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dp" />
         <stroke android:width="1dp" android:color="@color/list_background_disabled" />
         <gradient android:angle="-90" android:startColor="@color/app_background_color" android:endColor="@color/app_background_color" />            
     </shape>
 </item> 

<item android:state_pressed="true" android:state_enabled="true" >
     <shape android:shape="rectangle"  >
         <corners android:radius="3dp" />
         <stroke android:width="1dp" android:color="@color/list_background_disabled" />
         <gradient android:angle="-90" android:startColor="@color/shimmer_orange" android:endColor="@color/shimmer_orange"  />            
     </shape>
 </item>
 

<item android:state_focused="true" android:state_enabled="true">
     <shape android:shape="rectangle"  >
         <corners android:radius="3dp" />
         <stroke android:width="1dp" android:color="@color/list_background_disabled" />
         <solid android:color="@color/shimmer_orange"/>       
     </shape>
 </item>

<item >
    <shape android:shape="rectangle" android:state_enabled="true">
         <corners android:radius="3dp" />
         <stroke android:width="1dp" android:color="@color/list_background_disabled" />
         <gradient android:angle="-90" android:startColor="@color/list_background" android:endColor="@color/list_background" />            
     </shape>
 </item>

</selector>

